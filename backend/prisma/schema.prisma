// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

// Tabela de Categorias
model Category {
  id      Int      @id
  name   String
  courses Course[]

  @@map("categories")
}

// Tabela de Cursos - Pertence a 1 Categoria
model Course {
  id          Int       @id
  name        String
  position    Int
  description String?
  imageUrl    String?   @map("image_url")
  categoryId  Int
  category    Category  @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  sections    Section[]
  schedules   Schedule[]

  @@map("courses")
}

// Tabela de Sections (Módulos) - Pertence a 1 Course
model Section {
  id       Int      @id
  name     String
  slug     String
  position Int
  courseId Int
  course   Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  lessons  Lesson[]

  @@map("sections")
}

// Tabela de Lessons (Aulas) - Pertence a 1 Section
model Lesson {
  id            Int            @id
  title         String
  slug          String
  position      Int
  sectionId     Int
  section       Section        @relation(fields: [sectionId], references: [id], onDelete: Cascade)
  video         Video?
  scheduleItems ScheduleItem[]

  @@map("lessons")
}

// Tabela de Vídeos - Pertence a 1 Lesson (1:1)
model Video {
  id       Int     @id
  source   String?
  uid      String?
  duration Int?
  image    String?
  lessonId Int     @unique
  lesson   Lesson  @relation(fields: [lessonId], references: [id], onDelete: Cascade)

  @@map("videos")
}

// Tabela de Classrooms (Turmas)
model Classroom {
  id         Int    @id
  name       String
  courseName String @map("course_name")
  userCount  Int    @default(0) @map("user_count")

  @@map("classrooms")
}

// Tabela de Cronogramas
model Schedule {
  id               Int         @id @default(autoincrement())
  title            String
  description      String?
  courseId         Int
  course           Course         @relation(fields: [courseId], references: [id], onDelete: Cascade)
  startDate        DateTime       @map("start_date")
  endDate          DateTime       @map("end_date")
  studyDaysPerWeek Int            @map("study_days_per_week")
  hoursPerDay      Int            @map("hours_per_day")
  items            ScheduleItem[]
  createdAt        DateTime       @default(now()) @map("created_at")
  updatedAt        DateTime       @updatedAt @map("updated_at")

  @@map("schedules")
}

// Tabela de Itens do Cronograma
model ScheduleItem {
  id            Int      @id @default(autoincrement())
  scheduleId    Int      @map("schedule_id")
  schedule      Schedule @relation(fields: [scheduleId], references: [id], onDelete: Cascade)
  lessonId      Int      @map("lesson_id")
  lesson        Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  scheduledDate DateTime @map("scheduled_date")
  startTime     String   @map("start_time") // Formato HH:mm (ex: "14:30")
  duration      Int      // Duração em minutos
  completed     Boolean  @default(false)
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  @@map("schedule_items")
}
